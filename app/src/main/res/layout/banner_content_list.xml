<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_banner_img"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_login_logo"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_banner_content_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="文章标题"
                android:gravity="center_horizontal"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tv_banner_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="13sp"
                        android:text="浏览"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="#999"
                        android:textColor="#999"/>
                    <TextView
                        android:id="@+id/tv_banner_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="13sp"
                        android:text="喜欢"/>
                </LinearLayout>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:background="#999"
                    android:layout_marginBottom="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_banner_user_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_login_logo"/>
                    <TextView
                        android:id="@+id/tv_banner_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="13sp"
                        android:text="用户名"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="#999"
                        android:textColor="#999"/>
                    <TextView
                        android:id="@+id/tv_banner_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="13sp"
                        android:text="日期"/>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
